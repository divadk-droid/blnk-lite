# BLNK Risk Gate - Production Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3000
NODE_ENV=production

# =============================================================================
# Base Network Configuration
# =============================================================================
# Base Mainnet RPC
BASE_RPC_URL=https://mainnet.base.org
BASE_WS_URL=wss://mainnet.base.org

# Base Sepolia (Testnet) - For testing
BASE_SEPOLIA_RPC=https://sepolia.base.org
BASE_SEPOLIA_WS_URL=wss://sepolia.base.org

# Chain ID
BASE_CHAIN_ID=8453
BASE_SEPOLIA_CHAIN_ID=84532

# =============================================================================
# Contract Addresses (After Deployment)
# =============================================================================
# BLNK Token Contract
BLNK_TOKEN_ADDRESS=0x...

# Payment Gate Contract
PAYMENT_GATE_ADDRESS=0x...

# Treasury Address
TREASURY_ADDRESS=0x...

# =============================================================================
# Deployer & Admin
# =============================================================================
# Deployer Private Key (KEEP SECRET!)
DEPLOYER_PRIVATE_KEY=0x...

# Issuer Address (Receives 50% of tokens)
ISSUER_ADDRESS=0x...

# Team Address (Receives 15% of tokens)
TEAM_ADDRESS=0x...

# Marketing Address (Receives 15% of tokens)
MARKETING_ADDRESS=0x...

# Community Address (Receives 10% of tokens)
COMMUNITY_ADDRESS=0x...

# =============================================================================
# API Keys (Optional but Recommended)
# =============================================================================
# Alchemy for better performance
ALCHEMY_BASE_KEY=...
ALCHEMY_BASE_SEPOLIA_KEY=...

# BaseScan API Key for contract verification
BASESCAN_API_KEY=...

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite://./cache.db
REDIS_URL=redis://localhost:6379

# =============================================================================
# Payment & Credits
# =============================================================================
# API Credit Rate: 1 BLNK = X calls
CREDIT_RATE=100

# Minimum payment amount (in wei)
MIN_PAYMENT_AMOUNT=1000000000000000000

# =============================================================================
# Rate Limiting
# =============================================================================
# Default tier limits
FREE_TIER_LIMIT=5
BASIC_TIER_LIMIT=500
PRO_TIER_LIMIT=2000
ENTERPRISE_TIER_LIMIT=10000

# =============================================================================
# Notifications
# =============================================================================
# Telegram Bot
TELEGRAM_BOT_TOKEN=...
TELEGRAM_CHAT_ID=...

# Discord Webhook
DISCORD_WEBHOOK_URL=...

# =============================================================================
# Frontend Dashboard
# =============================================================================
NEXT_PUBLIC_API_URL=https://blnk-lite-production.up.railway.app
NEXT_PUBLIC_WS_URL=wss://blnk-lite-production.up.railway.app/ws
NEXT_PUBLIC_BLNK_TOKEN=0x...
NEXT_PUBLIC_PAYMENT_GATE=0x...
